@model OrderPad.Models.User

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div>
    Don't have an account? <a asp-action="Register">Register here</a>
</div>

@if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="text-danger">
        Invalid login attempt.
    </div>
}
